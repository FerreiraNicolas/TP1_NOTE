{% extends "base.html.twig" %}
{% block title %}
Formulaire Ajout Bien
{% endblock %}
{% block body %}
    
    <h3 align="center" > Affichage des différents Biens </h3>
    
    <table  style ="border:2px solid black; margin:auto;" align="center">
        
            <thead>
                <tr style ="border:4px solid black;">
                    <th>   Les biens: </th>
                </tr>
            </thead>
            <tr style ="background-color: #27eade; border:4px solid black;">
                <td  style ="border:4px solid black;">n° du bien </td>
                <td style ="border:4px solid black;">Nombre de Piece</td>
                <td style ="border:4px solid black;">Nombre de Chambre </td>
                <td style ="border:4px solid black;">Superficie du bien </td>
                <td style ="border:4px solid black;">Prix  </td>
                <td style ="border:4px solid black;">Chauffage </td>
                <td style ="border:4px solid black;">Annee </td>
                <td style ="border:4px solid black;">Lieu </td>
                <td style ="border:4px solid black;">Etat actuel </td>
            </tr>
            {% for unBien in result %}
            <tr style ="border:4px solid black;">
                <td style="background-color: #6d382d; border:4px solid #2bce7a;">{{ unBien.id }}</td>
                <td style="background-color:#6d382d; border:4px solid #2bce7a;">{{ unBien.getNbPiece }}</td>
                <td style="background-color:#6d382d; border:4px solid #2bce7a;">{{ unBien.getNbChambre }}</td>
                <td style="background-color:#6d382d; border:4px solid #2bce7a;">{{ unBien.getSuperficie }}</td>
                <td style="background-color:#6d382d; border:4px solid #2bce7a;">{{ unBien.getPrix }}</td>
                <td style="background-color:#6d382d; border:4px solid #2bce7a;">{{ unBien.getChauffage }}</td>
                <td style="background-color:#6d382d; border:4px solid #2bce7a;">{{ unBien.getAnnee }}</td>
                <td style="background-color:#6d382d; border:4px solid #2bce7a;">{{ unBien.getLocalisation }}</td>
                <td style="background-color:#6d382d; border:4px solid #2bce7a;">{{ unBien.getEtat }}</td>
                         <td><a href="/bien/update/{{ unBien.id }}" class="btn btn-outline-primary">MODIFIER</a></td>
                        <td><a href="/article/verif/supprimer/{{ unBien.id }}" class="btn btn-outline-danger">SUPPRIMER</a></td>
            </tr>
        {% endfor %}
        
        
    </table>
    
{% endblock %}{# empty Twig template #}